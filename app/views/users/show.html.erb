<p style="color: green"><%= notice %></p>

<%= render @user %>


<table class="table">
  <thead>
      <tr>
          <th>Tittle</th>
          <th>Description</th>
          <th>User</th>
          <th>Action</th>
          <th>Action</th>
      </tr>
  </thead>
  <tbody>
      <% @articles.each do |article| %>
          <tr>
              <td><%= article.title %></td>
              <td><%= article.description %></td>
              <td><%= article.user.username if article.user %></td>
              <td><%= link_to 'Show', article_path(article), class: "btn btn-primary" %></td>
              <td><%= button_to 'Delete', article_path(article), method: :delete, class: "btn btn-danger" %></td>
          </tr>
      <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
